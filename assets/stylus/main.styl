@import '_variables.styl'
*
    font-family 'Baloo Da 2', cursive
    font-size 20px
.text_destacado
    color first_color
.main
    padding 0
.section
    padding-top 2rem
    margin-top 2rem
    h2
        font-size: 1.6rem

.btn-primary,.btn-primary:focus,.btn-primary:active
    background first_color
    border none
    box-shadow none
    border-radius 1rem 0
.btn-primary:active,.btn-primary:hover
    background darken(first_color, 50%) !important
    transform scale(.9)
.btn_arrow
    color first_color
    background light_color
    border none
    &:focus
        outline none
    i
        border solid 2px first_color
        border-radius 50%
        padding 1rem
        font-size 1.5rem
        &:hover
            background first_color
            color light_color
.resaltado
    background alpha(first_color, .3)
    .cita
        margin 1rem 0
        font-family 'Courgette', cursive
.comentarios
    display flex
    align-items center
    margin 2rem 0
    h3
        margin-left 2rem
.tab-content, .tab-pane
    h2
        font-size 1.5rem
.preguntas
    margin 2rem 0
    display flex
    flex-direction column
    h2
        font-size 1.8rem
        margin-left 2rem
    &::before
        content 1
.respuesta
    margin 1rem 0
    font-family 'Courgette', cursive
.footer
    background first_color
    padding 1rem 0
    a, h3, p, h4
        color light_color
        font-size 1rem
    h3
        font-weight: 800
    a
        font-weight 400
        text-decoration underline
    h4
        font-size .8rem
.social_media
    display flex
    justify-content space-evenly
    margin-bottom 1rem
    img
        width 2.5rem
.copy
    border-top solid 1px light_color
    padding-top .6rem
.iconos
    color first_color

.datos_usuario
    h3::before
        content: '$ '
.form_envio
    input, textarea
        border solid 2px first_color
        border-radius 1.5rem
        font-size .7rem
        &:focus
            outline none
    textarea
        padding 1rem
        resize: none;
@media screen and (max-width: 576px)
    .section
        margin-top 0
        padding-top 1.5rem
    .comentarios
        h3
            font-size 1rem
    .nav-link
        img
            width 2rem
    .btn_arrow
        i
            padding .5rem
            font-size 1rem
    header
        position fixed
        z-index 1
        background light_color
    main
        padding-top 4rem !important